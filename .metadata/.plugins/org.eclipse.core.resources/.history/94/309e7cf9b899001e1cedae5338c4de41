spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQL8Dialect
#Disable open session in view  design pattern that allows the Hibernate session
# (or JPA entity manager) to remain open beyond the scope of a single database
spring.jpa.open-in-view=false
